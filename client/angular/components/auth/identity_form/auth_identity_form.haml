.auth-identity-form
  %h2.lmo-h2{translate: "auth_form.hello", translate-value-name: "{{user.name || user.email}}"}
  %auth_avatar{user: "user"}

  .auth-identity-form__options
    .auth-identity-form__new-account
      %p.lmo-hint-text{translate: "auth_form.new_to_loomio", translate-values: "{site_name: siteName}"}

      %md-input-container.md-block.auth-identity-form__rut
        %label{translate: "auth_form.rut"}
        %input.lmo-primary-form-input{type: "text", placeholder: "", ng-model: "vars.rut", ng-required: "true"}
        -#%validation_errors{subject: "user", field: "name"}

      %md-input-container.md-block.auth-identity-form__code
        %label{translate: "auth_form.code"}
        %input.lmo-primary-form-input{type: "text", placeholder: "", ng-model: "vars.code", ng-required: "true"}

      %md-button.md-primary.md-raised{ng-click: "createAccount()", translate: "auth_form.create_account"}



